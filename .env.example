# DSPy Docker Environment Configuration
# Copy this file to .env and fill in the values

# NVIDIA API Configuration
NVIDIA_API_KEY=your-nvidia-api-key-here
NVIDIA_API_BASE=https://api.nvidia.com/v1

# SAP AI Core Configuration
SAP_AI_CORE_API_KEY=your-sap-ai-core-api-key-here
SAP_AI_CORE_URL=https://your-sap-ai-core-instance-url

# Set default LM provider (nvidia or sap)
DSPY_LM_PROVIDER=nvidia

# SAP HANA Cloud Vector Store Configuration
SAP_HANA_HOST=your-hana-host.hanatrial.ondemand.com
SAP_HANA_PORT=443
SAP_HANA_USER=your-hana-user
SAP_HANA_PASSWORD=your-hana-password
SAP_HANA_DATABASE=your-hana-database
SAP_HANA_SCHEMA=PUBLIC
SAP_HANA_TABLE=VECTOR_STORE
DSPY_VECTOR_STORE=sap_hana

# Logging Configuration
LOG_LEVEL=INFO

# DSPy Configuration
DSPY_CACHE_DIR=/app/data/cache